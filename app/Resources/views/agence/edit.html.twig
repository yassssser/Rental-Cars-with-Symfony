        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-6 mx-auto">
            <input class="btn btn-warning btn-block" type="submit" value="update" />
        </div>
    </div>
    <a  class="btn btn-primary" href="{{ path('admin_agence_index') }}"><i class="fa fa-arrow-left"></i>  Back to the list</a>
     
    {{ form_end(edit_form) }}

    
           
     
{% endblock %}

