{% extends 'back.html.twig' %}

{% block content %}
    <h1>Agence edit</h1>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="form-group">
                {{ form_row(edit_form.libelle, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.adresse, {'attr': {'class': 'form-control'}}) }}
