{% extends 'back.html.twig' %}

{% block content %}
    <h1>Agent creation</h1>

    {{ form_start(form) }} 
    <div class="row">
        <div class="col-md-7">
            <div class="form-group">
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-5">
             <div class="form-group">
                {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
             </div>
            <div class="form-group">
                {{ form_row(form.agence, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.tel, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6 mx-auto">
            <input class="btn btn-success btn-block" type="submit" value="Create" />
        </div>
    </div>
    <a  class="btn btn-primary" href="{{ path('admin_agent_index') }}"><i class="fa fa-arrow-left"></i>  Back to the list</a>
      
    
    {{ form_end(form) }}


{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumb">
        <li><a href=""> Dashboard /  </a></li>
        <li class="mx-2"><a href="{{ path('admin_agent_index') }}"> Liste des agents /  </a></li>
        <li class="active">Nouveau agent</li>
    </ul>

{% endblock %}
